<div class="fixed-top bg-white container py-3">
        <div class="d-flex justify-content-center">
            <img src="https://blog.deepthought.education/wp-content/uploads/2022/06/dt-logo-expanded.svg"
                alt="logo expanded">
        </div>
        <div class="d-flex mt-3 align-items-center">
            <i class="fa-solid fa-arrow-left-long"></i>
            <p class="text-center mb-0 ml-3">What would you like to learn about</p>
        </div>
    </div>

    <div class="container py-5">
        <div class="pt-5"><div>

        <!-- BEGIN categories -->
            <div class="mt-3 category-block" data-cid="{categories.cid}">
                <div class="position-relative component-full height-100 d-flex justify-content-center align-items-center">
                    <img src="https://blog.deepthought.education/wp-content/uploads/2022/06/iewek-gnos-hhUx08PuYpc-unsplash.jpg"
                        alt="{categories.name}" class="position-absolute component-full img-cover rounded-10-px height-100">
                    <div class="position-absolute component-full rounded-10-px height-100 overlay-black-60 overlay-block">
                    </div>
                    <p class="position-absolute mb-0 secondary-text font-14">{categories.name}</p>
                </div>
            </div>
        <!-- END categories -->

        <div class="fixed-bottom bg-transparent mb-4 d-flex justify-content-between container">
            <button class="rounded-lg button-primary border-0 font-12 button-lg-p" id="skip-btn">Skip</button>
            <button class="rounded-lg button-brand border-0 font-12 button-lg-p" id="submit-btn">Submit</button>
        </div>

    </div>

